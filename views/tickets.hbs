<!-- index.hbs -->
<h2>View and Add Agents Tickets</h2>
{{!-- Create a table --}}
<table id="ticket_table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
            
        <th>
            ticket id
        </th>

        <th>
            user id
        </th>

        <th>
            subject
        </th>

        <th>
            body
        </th>

        <th>
            date created
        </th>

        <th>
            status
        </th>

        <th>
            department
        </th>

            
            <th style="width:100px;">
        Edit
        </th>
            <th style="width:150px;">
        Delete
        </th>

    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print name --}}
        {{#each data}}
        <tr>
            <td>{{this.ticket_id}}</td>
            <td>{{this.Users_user_id}}</td>
            <td>{{this.ticket_subject}}</td>
            <td>{{this.ticket_body}}</td>
            <td>{{this.create_date}}</td>
            <td>{{this.ticket_status}}</td>
            <td>{{this.tag_name}}</td>
            <td><button type="button">Edit Entry</button>
            <td><button type="button">Delete Entry</button>
        </tr>
        {{/each}}
    </tbody>
</table>
<!-- /views/index.hbs -->

{{!-- Form to add a record to the table  --}}
<h2>Add an entry</h2>
<p>To add a new ticket, please enter the ticket information below and click 'Submit'!</p>
<form id="add-ticket-form-ajax">
    
    <label for="input-user-id">user id: </label>
    <select id="input-user_id">
        <option value="">select a user id</option>
        {{#each user_ids}}
        <option value="{{this.user_id}}">{{this.user_id}}</option>
        {{/each}}
    </select>

    
    <label for="input-ticket_subject">ticket_subject: </label>
    <input type="text" name="input-ticket_subject" id="input-ticket_subject">

    <label for="input-ticket_body">ticket_body: </label>
    <input type="text" name="input-ticket_body" id="input-ticket_body">

    <label for="input-tag_name">department: </label>
       <select id="input-tag_name">
        <option value="">select a department</option>
        {{#each department}}
        <option value="{{this.tag_type}}">{{this.tag_type}}</option>
        {{/each}}
    </select>
    
    <input type="submit">
</form>


<h2>Claim a ticket</h2>
<form id="add_agent_ticket_table">

    <label for="agent">
        Agent
    </label>
    
    <select name="agent-drop" id="agent-dop">
        <option value="">please select your employee id</option>
        {{#each agents}}
        <option value="{{this.agent_id}}">{{this.agent_id}} {{this.agent_name}}</option>
        {{/each}}
    </select>

    <select name="ticket-to-claim" id="claim-id">
        <option>
            please select the ticket you wish to claim
        </option>
        {{#each data}}
        <option value="{{this.ticket_id}}">Id:{{this.ticket_id}} from UId:{{this.Users_user_id}}</option>
        {{/each}}

    </select>

    <input type="submit">

</form>

<h2>search</h2>
<p>can only search by a single input</p>
<form action="/submit-url" method="post">
    <label for="department">Department: </label>
    
    <select id="department" name="department">
        <option value=""></option>
        {{#each department}}
        <option value="{{this.tag_id}}">{{this.tag_type}}</option>
        {{/each}}
    </select>
    <input type="submit" value="Submit">
</form>

