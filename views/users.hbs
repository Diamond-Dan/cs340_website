<!-- index.hbs -->

{{!-- Create a table --}}
<table id="user_table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.user_id}}</td>
            <td>{{this.user_name}}</td>
            <td>{{this.user_email}}</td>
            <td>{{this.user_Phone_number}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<h2>Add an entry</h2>
<p>To add a new user, please enter the user information below and click 'Submit'!</p>
<form id="add-user-form-ajax">
    <label for="input-user_name">user_name: </label>
    <input type="text" name="input-user_name" id="input-user_name">
    
    <label for="input-user_email">user_email: </label>
    <input type="text" name="input-user_email" id="input-user_email">

    <label for="input-user_Phone_number">user_Phone_number: </label>
    <input type="text" name="input-user_Phone_number" id="input-user_Phone_number">


    
    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_user.js"></script>